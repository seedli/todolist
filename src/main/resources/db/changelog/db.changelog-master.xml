<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
	<changeSet id="20220125-20-50-01" author="Tom Li">
		<createTable tableName="user_roles">
			<column name="role_id" type="BIGINT" autoIncrement="true">
	            <constraints primaryKey="true" nullable="false"/>
	        </column>
			<column name="role" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<createTable tableName="users">
			<column name="user_id" type="BIGINT" autoIncrement="true">
	            <constraints primaryKey="true" nullable="false"/>
	        </column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
			<column name="password" type="varchar(100)">
				<constraints nullable="false"/>
			</column>
			<column name="role_id" type="BIGINT">
				<constraints foreignKeyName="fk_role_id" references="user_roles(role_id)"/>
			</column>
		</createTable>
		
	</changeSet>
	
	<changeSet id="20220126-10-04-01" author="Tom Li">
		<insert tableName="user_roles">   
            <column name="role" value="ADMIN" />
        </insert>
        <insert tableName="user_roles">   
            <column name="role" value="USER" />
        </insert>
	</changeSet>
	
	<changeSet id="20220126-10-04-02" author="Tom Li">
		<insert tableName="users">   
            <column name="name" value="admin" />
            <column name="password" value="password" />
            <column name="role_id" valueComputed="(select role_id from user_roles where user_roles.role = 'ADMIN')" />
        </insert>
        <insert tableName="users">   
            <column name="name" value="tom" />
            <column name="password" value="tom" />
            <column name="role_id" valueComputed="(select role_id from user_roles where user_roles.role = 'USER')" />
        </insert>
	</changeSet>
</databaseChangeLog>